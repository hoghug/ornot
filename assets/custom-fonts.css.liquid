/* Trade Gothic Regular (400) */
@font-face {
  font-family: "Trade Gothic";
  src: url('{{ "TradeGothic-Regular.woff2" | file_url }}') format("woff2"),
       url('{{ "TradeGothic-Regular.woff"  | file_url }}') format("woff");
  font-weight: 400;
  font-style: normal;
  font-display: swap;
}

/* Trade Gothic Bold (700) */
@font-face {
  font-family: "Trade Gothic";
  src: url('{{ "TradeGothicLTPro-Bold.woff2" | file_url }}') format("woff2"),
       url('{{ "TradeGothicLTPro-Bold.woff"  | file_url }}') format("woff");
  font-weight: 700;
  font-style: normal;
  font-display: swap;
}
