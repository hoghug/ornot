    <script>
    function ampCheckoutBtnToCart () {
      let ampIntervalCounter = 0;
      
      const ampInterval = setInterval(() => {
        ampIntervalCounter++;
        const ampCheckoutBtn = document.querySelector('.amp-cart-drawer .amp-cart__footer .amp-cart__footer-checkout-button');
        
        if (ampCheckoutBtn) {
          clearInterval(ampInterval);
          ampCheckoutBtn.addEventListener('click', event => {
            event.stopImmediatePropagation();
            window.location.href = `${window.Shopify.routes.root}cart`;
          });
        } else if (ampIntervalCounter >= 60) {
          clearInterval(ampInterval);
        }
      }, 500);
    }
  
    window.AMP_CART_LOADED = cart => {
      {% if customer and customer.tags contains 'cartfix' %}
        ampCheckoutBtnToCart();
      {% endif %}
    }
  </script>
